extends layout

block menu
    +menu

block content
    .container
        .row
            .col-md-8
                h2
                    | Contributions by 
                    = user.name
                if manage
                    //- a.btn.btn-primary(href="/profile/upload")
                    //-     i.fa.fa-plus
                    //-     |  Upload package
                    //- |  
                    a.btn.btn-default(href="/profile/change-password")
                        +fa("key")
                        |  Change password
                    if user.state=='moderator'
                        |  
                        a.btn.btn-default(href="/profile/review-contributions")
                            +fa("check-square")
                            |  Review Contributions

                uls.fa-ul
                    each contribution in contributions
                        li
                            +fa("li fa fa-comment-o")
                            a(href="#{contribution.url}")
                                h3= contribution.subject
            .col-md-4
                h1.text-center
                    +gravatar( user.emailMd5, user.name, 496 ).img-responsive
                    = user.name

