extends layout

mixin committeeOnlineCount
    .col-sm-6.col-md-4.col-lg-3
        a.boxItem.user.neutral
            .number= users.length
            .name Total
    .col-sm-6.col-md-4.col-lg-3
        a.boxItem.user.online
            .number= onlineCount
            .name Online
    .col-sm-6.col-md-4.col-lg-3
        a.boxItem.user.offline
            .number= offlineCount
            .name Offline

mixin vote(vote)
    .contribution-wrapper
        h2
            if vote.closed
                span.badge.pull-right Closed
            = vote.subject
        .markdown
            != marked(vote.text)

block menu
    +menu

block content
    .container
        a(href="/profile/committee").btn.btn-default
            +fa("user-circle-o")
            |  Committee

    block committeeContent
