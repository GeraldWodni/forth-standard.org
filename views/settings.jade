extends layout

block menu
    +menu

block title
    | Settings

block content
    .container
        div.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
            h1 Settings

            if error
                div.alert.alert-danger
                    strong
                        = error

            if success
                div.alert.alert-success
                    strong
                        = success

            form(method='post',role='form')
                +checkbox-field('dailyDigest', 'Receive daily digest', dailyDigest) 
                +hidden-field("csrf", csrf)
                button.btn.btn-primary(type='submit',name='change',value='yes')=__("Update")
                p

